@model IEnumerable<NETDatingApp.Models.PersonProfile>

@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>FamilyMatch</h1>
    <p class="lead">FamilyMatch är sidan för dig som vill träffa släktingar du inte visste att du hade! Olämpliga meddelanden till släktingar undanbedes.</p>
    <p><a href="https://sv.wikipedia.org/wiki/Incest" class="btn btn-primary btn-lg">Vad innebär det? &raquo;</a></p>
</div>

@{

}


<div class="row">
    @foreach (var item in Model) {

        var x = "Login";
        var y = "Account";
        if (System.Web.HttpContext.Current.User != null && System.Web.HttpContext.Current.User.Identity.IsAuthenticated) {
            x = "MyProfile";
            y = "Profile";
        }

        <div class="profile-card">
            @Html.Partial("_ExampleUser", item)

            <a href='@Url.Action(x, y)'> @Html.ActionLink("Läs mer", "Profile", "profile", new { @item.ProfileID }, new { @class = "profile-card-link" }) </a>
        </div>
    }
</div>




