
@{
    ViewBag.Title = "MyProfile";
}

<div class="container">
    <div class="fb-profile">
        <!-- header -->
        <img align="left" class="fb-image-lg" src="http://lorempixel.com/850/280/nightlife/5/" alt="Profile image example" />

        <!-- Thumbnail -->
        <img align="left" class="fb-image-profile thumbnail" src="http://lorempixel.com/180/180/people/9/" alt="Profile image example" />
        <div class="fb-profile-text">
            <h1>Farmor Greta</h1>
            <p>Grandma's just wanna have fun.</p>




            <div class="latest-visitors">
                <h4> Senaste besökarna</h4>
                <ul>
                    <li> <a href=""> Ludvig Lund</a> </li>
                    <li> <a href=""> Ludvig Mellström</a> </li>
                    <li> <a href=""> Ludvig Sagtröm</a> </li>
                    <li> <a href=""> Hugo Mellström </a> </li>
                    <li> <a href=""> Andreas Sagström  </a> </li>
                </ul>
            </div>
            <div class="bio">
                <ul>
                    <li><span class="bold"> Namn: </span> *Name Namesson*</li>
                    <li><span class="bold"> Ålder: </span> *98*</li>
                    <li><span class="bold"> Gillar: </span> *katter, och damer*</li>
                </ul>
            </div>
        </div>


        

        <hr />  
        <div class="profile-container">

            <a class="add-friend" href="">Lägg till vän</a>

            <div class="form-group">
                <label for="comment">Vill du skriva något till *person* ?</label>
                <textarea class="form-control" rows="5" id="comment"></textarea>
            </div>




            <hr />
            <h3 class="posts-headline"> Senaste inläggen </h3>
            <!-- user posts end up here -->
            <div class="profile-posts">

                <!-- the card that contains everything the user posts -->
                <div class="post-card">
                    <div class="post-img">
                        <img src="~/Content/img/bild3.jpg" />
                    </div>
                    <div class="post-content">
                        <h3 class="post-poster"> <a href=""> Ludvig Lund </a> </h3>
                        <p> * hejsan jag tycker du är väldigt snygg hejdå thihihih* </p>
                    </div>
                </div>

                <div class="post-card">
                    <div class="post-img">
                        <img src="~/Content/img/bild2.jpg" />
                    </div>
                    <div class="post-content">
                        <h3 class="post-poster"> <a href=""> Hugo Sagström </a> </h3>
                        <p> * hejsan vilken jääävla pingla, dig skulle man kunna bjuda på en kaka ochg ett glas vin tjohej* </p>
                    </div>
                </div>

                <div class="post-card">
                    <div class="post-img">
                        <img src="~/Content/img/bild1.jpg" />
                    </div>
                    <div class="post-content">
                        <h3 class="post-poster"> <a href=""> Andreas Mellström </a> </h3>
                        <p> * Olala tiddies oh yeah* </p>
                    </div>
                </div>


            </div>
        </div>
    </div>

</div> <!-- /container -->
