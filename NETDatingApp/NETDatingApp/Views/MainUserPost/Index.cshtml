@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-3.3.1.slim.js"> </script>

<script>

    $("#submit").click(function () {

        var id = $("#id").val();
        var user = $("#user").val();
        var comment = $("#comment").val();

        var datastring = id + " " + user + " " + comment;

        $.ajax({
            type: "post",
            url: "Register",
            data: datastring,
            success: function ($data) {
                $("#show_stored_data").html($data);
                alert("success!");
            },
            error: function () {
                alert("fail");
            }
        });
    });


</script>

<h2>Registrering</h2>

<table class="table">
    <tr>
        <th>Id</th>
        <th>User</th>
        <th>Comment</th>
    </tr>
    <tr>
        <td><input type="number" class="form-control" id="id"</td>
        <td><input type="text" class="form-control" id="user"</td>
        <td><input type="text" class="form-control" id="comment" /></td>

    </tr>

    <button type="button" class="btn btn-success" id="submit"> Submit  </button>
</table>

<hr />

Stored Data
<div id="show_stored_data">

</div>













